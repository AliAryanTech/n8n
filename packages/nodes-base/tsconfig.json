{
	"extends": "@n8n/typescript-config/modern/tsconfig.json",
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@credentials/*": ["./credentials/*"],
			"@test/*": ["./test/*"],
			"@utils/*": ["./utils/*"],
			"@nodes-testing/*": ["../core/nodes-testing/*"]
		},
		// TODO: Fix and remove all options below this line to comply with the parent config
		"noImplicitReturns": false,
		"noImplicitOverride": false,
		"useUnknownInCatchVariables": false,
		"strictNullChecks": false,
		"noImplicitAny": false
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts",
		"nodes/**/*.json",
		"test/**/*.ts",
		"types/**/*.ts",
		"utils/**/*.ts",
		"../core/nodes-testing/**/*.ts"
	],
	"exclude": ["node_modules"],
	"references": [
		{ "path": "../@n8n/imap/tsconfig.build.json" },
		{ "path": "../workflow/tsconfig.build.esm.json" },
		{ "path": "../core/tsconfig.build.json" }
	],
	"tsc-alias": {
		"replacers": {
			"base-url": {
				"enabled": false
			}
		}
	}
}
